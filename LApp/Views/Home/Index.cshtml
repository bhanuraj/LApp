@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="indexController">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <img style="max-width: 20%;" src="../../Assets/imgs/LApp.png" alt="LApp" />
                <lable style="font-size: 170%;">&nbsp;&nbsp; Login to LApp</lable>
            </div>
            <div class="col-lg-4 right">
                Don't you have a LApp Account? <a class="btn btn-material-purple" href="/Home/SignUp">
                    Sign up
                    <div class="ripple-wrapper">
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="" style="height: 100vh; padding: 3%; background-color: #009587;">
        <div class="col-lg-7 hidden-phone" style="color: White; text-align: center">
            <br />
            <div>
                <img style="min-width: 20%; max-width: 75%;" src="../../Assets/imgs/book_Home.png" />
                <h2>
                    "<u><i>Grounds for Thought</i></u>"</h2>
            </div>
            <br />
        </div>
        <div class="col-lg-4">
            <div class="jumbotron">
                <div class="form-group">
                    <label class="control-label" for="inputEmail">
                        User name</label>
                    <div class="form-control-wrapper">
                        <input id="inputEmail" class="form-control empty" type="email" placeholder="This is usually your email address"
                            ng-model="UserName" />
                        <span class="material-input"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label" for="inputPassword">
                        Password</label>
                    <div class="form-control-wrapper">
                        <input id="inputPassword" class="form-control empty" type="password" ng-model="Password" />
                        <span class="material-input"></span>
                    </div>
                </div>
                <br />
                <div class="alert alert-dismissable alert-danger" ng-show="Message">
                    <span ng-bind="Message"></span>
                </div>
                <div style="text-align: center">
                    <a class="btn btn-material-purple" ng-click="Login();">Login to LApp
                        <div class="ripple-wrapper">
                        </div>
                    </a>
                </div>
                <br />
            </div>
        </div>
    </div>
</div>
@section Script{
    <script src="../../Assets/js/services/indexService.js" type="text/javascript"></script>
    <script src="../../Assets/js/controllers/indexController.js" type="text/javascript"></script>
}
