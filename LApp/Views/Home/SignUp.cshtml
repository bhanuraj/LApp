@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="SignUpController">
    @*<ul class="breadcrumb" style="margin-bottom: 5px; padding-left: 0px">
        <li><a href="UrlBlockedError.aspx" target="_blank">My BT</a> </li>
        <li><a href="UrlBlockedError.aspx" target="_blank">Latest bill</a> </li>
        <li class="active">your landline and calls </li>
    </ul>*@
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <img style="max-width: 20%;" src="../../Assets/imgs/LApp.png" alt="LApp" />
                <lable style="font-size: 170%;">&nbsp;&nbsp; Register to LApp</lable>
            </div>
            <div class="col-lg-4 right">
            </div>
        </div>
    </div>
    <div style="height: 100vh; padding: 3%; background-color: #009587;">
        <div class="container well">
            <div class="row col-lg-12">
                <h2>
                    Register</h2>
                <div class="progress">
                    <div class="progress-bar" style="width: 100%">
                    </div>
                </div>
            </div>
            <div class="row ">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label class="control-label" for="inputEmail">
                                Name</label>
                            <div class="form-control-wrapper">
                                <input class="form-control empty" type="text" ng-model="Name" />
                                <span class="material-input"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label class="control-label" for="inputEmail">
                                Email</label>
                            <div class="form-control-wrapper">
                                <input class="form-control empty" type="email" ng-model="Email" />
                                <span class="material-input"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-6">
                            <label class="control-label" for="inputEmail">
                                Password</label>
                            <div class="form-control-wrapper">
                                <input class="form-control empty" type="password" ng-model="Password" />
                                <span class="material-input"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="text-align: center">
                        <a class="btn btn-material-purple btn-lg" href="/Home"><i class="mdi-hardware-keyboard-arrow-left"></i> Back
                            <div class="ripple-wrapper">
                            </div>
                        </a><a class="btn btn-material-purple btn-lg" ng-click="Register();">Create LApp account <i class="mdi-hardware-keyboard-arrow-right"></i>
                            <div class="ripple-wrapper">
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Script{
    <script src="../../Assets/js/services/SignUpService.js" type="text/javascript"></script>
    <script src="../../Assets/js/controllers/SignUpController.js" type="text/javascript"></script>
}
