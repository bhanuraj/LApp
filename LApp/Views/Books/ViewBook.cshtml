@model LApp.ViewModels.ViewBookViewModel
@{
    ViewBag.Title = "ViewBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="viewBookController" ng-init="Initilize(@Newtonsoft.Json.JsonConvert.SerializeObject(Model));">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <img style="max-width: 20%;" src="../../Assets/imgs/LApp.png" alt="LApp" />
                <lable style="font-size: 170%;">&nbsp;&nbsp;</lable>
            </div>
            <div class="col-lg-4 right">
                Welcome {{UserName}} <a class="btn btn-material-purple" href="/Home/Logout">Log out
                    <div class="ripple-wrapper">
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div style="height: 100vh; padding: 3%; background-color: #009587;">
        <div class="container">
            <div class="jumbotron row">
                <div class="col-lg-3 well">
                    <a class="col-lg-12 btn btn-material-purple" style="text-align: left; margin-bottom: 0px;"
                        href="/Books">View Books</a><div ng-if="UserRole == 'Admin'">
                            <a class="col-lg-12 btn btn-material-purple" style="text-align: left; margin-bottom: 0px;"
                                href="/Books/AddBook">Add Book</a> <a class="col-lg-12 btn btn-material-purple" style="text-align: left;
                                    margin-bottom: 0px;" href="/Books/IssueBook">Issue Book</a> <a class="col-lg-12 btn btn-material-purple"
                                        style="text-align: left; margin-bottom: 0px;" href="/Books/ReturnBook">Return Book</a></div>
                </div>
                <div class="col-lg-9">
                    <div class="col-lg-12">
                        <h2>
                            Book Details</h2>
                        <div class="progress">
                            <div class="progress-bar" style="width: 100%">
                            </div>
                        </div>
                    </div>
                    <div class="row col-lg-12">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label class="control-label" for="inputEmail">
                                        Book Name</label>
                                    <div class="form-control-wrapper">
                                        {{Book.Name}}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label class="control-label" for="inputEmail">
                                        Author</label>
                                    <div class="form-control-wrapper">
                                        {{Book.Author}}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-lg-6">
                                    <label class="control-label" for="inputEmail">
                                        Published Year</label>
                                    <div class="form-control-wrapper">
                                        {{Book.PublishedYear}}
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="text-align: center" ng-if="Book.IsAvailableInStore">
                                <a class="btn btn-material-purple btn-lg" ng-click="RequestBook();">Request for book
                                    <div class="ripple-wrapper">
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Script{
    <script src="../../Assets/js/services/viewBookService.js" type="text/javascript"></script>
    <script src="../../Assets/js/controllers/viewBookController.js" type="text/javascript"></script>
}
