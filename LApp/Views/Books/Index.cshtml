@model LApp.ViewModels.ViewBooksViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="viewBooksController" ng-init="Initilize(@Newtonsoft.Json.JsonConvert.SerializeObject(Model));">
    <style>
        .book
        {
            margin: 2px;
        }
        .book:hover
        {
            background-color: #009587;
            color: White;
            cursor: pointer;
        }
    </style>
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <img style="max-width: 20%;" src="../../Assets/imgs/LApp.png" alt="LApp" />
                <lable style="font-size: 170%;">&nbsp;&nbsp;</lable>
            </div>
            <div class="col-lg-4 right">
                Welcome {{UserName}} <a class="btn btn-material-purple" href="/Home/Logout">Log out
                    <div class="ripple-wrapper">
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div style="height: 100vh; padding: 3%; background-color: #009587;">
        <div class="container">
            <div class="jumbotron row">
                <div class="col-lg-3 well">
                    <a class="col-lg-12 btn btn-material-purple" style="text-align: left; margin-bottom: 0px;"
                        href="/Books">View Books</a><div ng-if="UserRole == 'Admin'">
                            <a class="col-lg-12 btn btn-material-purple" style="text-align: left; margin-bottom: 0px;"
                                href="/Books/AddBook">Add Book</a> <a class="col-lg-12 btn btn-material-purple" style="text-align: left;
                                    margin-bottom: 0px;" href="/Books/IssueBook">Issue Book</a> <a class="col-lg-12 btn btn-material-purple"
                                        style="text-align: left; margin-bottom: 0px;" href="/Books/ReturnBook">Return Book</a></div>
                </div>
                <div class="col-lg-9">
                    <div class="col-lg-12">
                        <h2>
                            Books</h2>
                        <div class="progress">
                            <div class="progress-bar" style="width: 100%">
                            </div>
                        </div>
                    </div>
                    <div class="row col-lg-12">
                        <div class="col-lg-6" ng-show="Books.length == 0">
                            No Books in ibrary!</div>
                        <div ng-repeat="book in Books | " class="col-lg-6">
                            <div class="row book alert-info" ng-click='ShowBook(book.BookId);'>
                                <div class="col-lg-4">
                                    <img src="../../Assets/imgs/book_PNG2112.png" style="max-width: 90%" />
                                </div>
                                <div class="col-lg-8">
                                    Name : {{book.Name}}<br />
                                    Author :{{book.Author}}<br />
                                    Published Year : {{book.PublishedYear}}<br />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Script{
    <script src="../../Assets/js/controllers/ViewBooksController.js" type="text/javascript"></script>
}
